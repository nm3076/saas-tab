<h2>Links at <em><%= @workspace.workspace_name %></em></h2>


<table>
  <thead>
    <tr>
      <th>Link</th>
      <th> <button id="add-link-to-workspace" class="btn btn-primary"> Add Link </th> 
    </tr>
  </thead>
  <tbody>
    <% @links.each do |l| %>
      <tr>
        <td>
          <%= l.link %>
        </td>
            
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <%= link_to 'Delete', workspace_path(@workspace), 'data-method' => 'delete', 'data-confirm' => 'Are you sure?', :class => 'btn btn-danger col-2' %>
  <%= link_to 'Back to workspace dashboard', workspaces_path, :class => 'btn btn-primary col-2' %>
</div>


