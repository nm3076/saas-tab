<div class="row">
    <div class="col-sm">
        <div class="card">
            <div class="card-body">

                <h1><%= @curr_user.username %>'s Workspaces and Collaborations</h1>
                <%= button_to "Create A New Workspaces", new_workspace_path, method: "get", :class => "btn btn-outline-primary" %><br>


    <%= form_tag workspaces_path, method: :get do %>
      Tags:
      <% @all_tags.each do |tag| %>
        <div class="form-check  form-check-inline">
          <%= label_tag "tags[#{tag}]", tag, class: 'form-check-label' %>
          <%= check_box_tag "tags[#{tag}]", "1",  @tags_to_show.include?(tag), class: 'form-check-input' %>
        </div>
      <% end %>
      <%= submit_tag 'Refresh', class: 'btn btn-primary' %>
    <% end %>

    <div class="row workspace-container">
      <% @workspaces.each do |workspace| %>
          <div> Tag: <%= workspace.tags %> </div>
          <div class="workspace"> <%= link_to "#{workspace.workspace_name}", workspace_path(workspace.id) %> </div>
      <% end %>

            </div>
        </div>

    </div>
</div>

<div class="row">
    <div class="col-sm-4">
        <div class="card">

            <div class="card-header">
                <h3> Workspaces I Own </h3>
            </div>

            <div class="card-body">

            <% @workspaces.primary_or_owner.each do |workspace| %>
                <div class="workspace"> <%= link_to "#{workspace.workspace_name}", workspace_path(workspace.id) %> </div>
            <% end %>
            </div>
        </div>
    </div>


    <div class="col-sm-4">
        <div class="card">
            
            <div class="card-header">
                <h3> Workspaces I Can Update </h3>
            </div>

            <div class="card-body">

                <% current_user.workspaces.update_and_view.each do |p| %>
                    <ul>
                    <%= render "workspace_link", {p: p} %> 
                    </ul>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-sm-4">
        <div class="card">
        
            <div class="card-header">
                <h3> Workspaces I Can View </h3>
            </div>

            <div class="card-body">

                <% current_user.workspaces.view_only.each do |p| %>
                    <ul>
                    <%= render "workspace_link", {p: p} %> 
                    </ul>
                <% end %>
            </div>
        </div>
    </div>
</div>  