  
<div class="row">
<div class="col-sm-6">
    <div class="card">
        <div class="card-body">

            <%= bootstrap_form_for(@collaboration) do |f| %>
                <%= f.hidden_field :id %>
                <%= f.collection_select :user_id, User.all_except(current_user), :id, :username, :prompt => true %><br>
              
                <%= f.select  :role, [["Project Owner", "Project Owner"], ["Update and View", "Update and View"], ["View Only", "View Only"]], :prompt => true %><br>
                  
                <%= f.collection_select :project_id, current_user.projects.primary_owner, :id, :address, :prompt => true %><br>
              
                <%= f.submit nil, class: 'btn btn-secondary' %>
            <% end %>
        </div>
    </div>
</div>

<div class="col-sm-6">
    <div class="card">
        <div class="card-body">
        
        <h3>Collaboration Roles and Privileges</h3>

            <ul>
              <li>Primary Project Owner:</li>
                <ul>
                  <li>Create/Edit/Delete Projects and Goals</li>
                  <li>Manages Collaborations</li>
                  <li>Create/Delete Images, Updates, and Resources</li>
                </ul>
            <li>Project Owner:</li>
                <ul>
                  <li>Create/Edit Goals</li>
                  <li>Create/Delete Images, Updates, and Resources</li>
                </ul>
            <li>Update and View:</li>
                <ul>
                    <li>Edit Goals</li>
                    <li>Create Images, Updates, and Resources</li>
                </ul>
            <li>View Only:</li>
                <ul>
                  <li>View shared Projects, Goals, Images, Updates and Resources</li>
                </ul>
            </ul>

        </div>
      </div>
    </div>
</div>